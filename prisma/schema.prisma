model Doctor {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  title          String
  specialization String
  profileImage   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("doctors")
}
